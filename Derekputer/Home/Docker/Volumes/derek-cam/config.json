{
    "port": 5001,
    "ffmpegPath": "/bin/ffmpeg",
    "ffmpegLogSize": 200,
    "defaultOptions": {
        "respawnDelay": 5,
        "respawnOnClose": true,
        "respawnOnError": true
    },
    "streams": [
        {
            "name": "Derek Cam",
            "input": "/dev/video0",
            "outputArgs": [
                "-s", "1280x720",
                "-r", "20",
                "-q:v", "1",
                "-an"
            ],
            "script": "script.js"
        }
    ]
}
